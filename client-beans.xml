<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="carWebService" class="org.springframework.remoting.jaxws.JaxWsPortProxyFactoryBean">
        <property name="serviceInterface" value="com.company.api.Car"/>
        <property name="wsdlDocumentUrl" value="http://localhost:8080/car?wsdl"/>
        <property name="namespaceUri" value="http://ws.company.com/"/>
        <property name="serviceName" value="CarWSSService"/>
        <property name="portName" value="CarWSPort"/>
    </bean>

    <bean id="client" class="com.foo.client.CarServiceImpl">
        <constructor-arg ref="carWebService"/>
    </bean>
</beans>